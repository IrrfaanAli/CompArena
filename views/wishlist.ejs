<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CampArena</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <!--table link-->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

</head>

<body>
  <%- include ('partials/header.ejs') %>

    <!-- table part start-->

    <div class="container">
      <h2>Pinned Event</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th style="font-size: 17px;">Event Name</th>
            <th style="font-size: 17px;">Registration Deadline</th>
            <th style="font-size: 17px;">ORG Email</th>
            <th style="font-size: 17px;">Event Link</th>
            <th style="font-size: 17px;">view</th>
            <th style="font-size: 17px;">Remove</th>
          </tr>
        </thead>
        <tbody>
          <% eventList.forEach(event=> { %>
            <tr>
              <td style="font-size: 17px;">
                <%= event.eventName1 %>
              </td>
              <td style="font-size: 17px;">
                <%= event.regDeadline1 %>
              </td>
              <td style="font-size: 17px;">
                <%= event.organizerEmail1 %>
              </td>
              <td style="font-size: 17px;">
                <%= event.eventLink1 %>
              </td>
              <td>
                <form method="post" action="/event_view">
                  <input type="hidden" name="image1" value="<%= event.image1 %>">
                  <input type="hidden" name="eventName1" value="<%= event.eventName1 %>">
                  <input type="hidden" name="eventType1" value="<%= event.eventType1 %>">
                  <input type="hidden" name="eventMode1" value="<%= event.eventMode1 %>">
                  <input type="hidden" name="eventDetails1" value="<%= event.eventDetails1 %>">
                  <input type="hidden" name="date1" value="<%= event.date1 %>">
                  <input type="hidden" name="regDeadline1" value="<%= event.regDeadline1 %>">
                  <input type="hidden" name="region1" value="<%= event.region1 %>">
                  <input type="hidden" name="eventLink1" value="<%= event.eventLink1 %>">
                  <input type="hidden" name="organizerName1" value="<%= event.organizerName1 %>">
                  <input type="hidden" name="organizerEmail1" value="<%= event.organizerEmail1 %>">
                  <button type="submit"
                    style="height:30px; width:auto; background-color: lightgray; border: none; border-radius: 3px;">view</button>
                </form>
              </td>
              <td>
                <form method="post" action="/remove/<%= event._id %>">
                  <input type="hidden" name="evenName1" value="<%= event.eventName1 %>">
                  <button type="submit"
                    style="height:30px; width:30px; background-color: red; border:none; border-radius: 5px; margin:0 0 0 10px;">
                    <span class="glyphicon glyphicon-remove"></span>
                  </button>
                </form>
              </td>
            </tr>
        </tbody>
        <% }); %>
      </table>
    </div>





    <!--footer start-->




    <!-- Footer -->


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous"></script>

</body>

</html>